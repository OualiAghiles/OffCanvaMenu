{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": ["airbnb-base"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "semi": "off",
    "no-console": "warn",
    "arrow-parens": "off",
    "comma-dangle": "off",
    "func-names": "off",
    "prefere-default-export": "off",
    "prefer-arrow-callback": "off"
  }
}
